<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rr.virtual_hospital.AllgerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="Currently, there is no cure for Alzheimer's. But drug and non-drug treatments may help with both cognitive and behavioral symptoms.

Researchers are looking for new treatments to alter the course of the disease and improve the quality of life for people with dementia."

                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:layout_below="@+id/textView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="240dp"
                android:padding="10dp"
                android:text="Treatment: "
                android:textColor="#43663c"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/symptoms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Symptoms: "
                android:padding="10dp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/symptoms"
                android:layout_marginTop="14dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Alzheimer’s disease (AD) is a type of dementia where brain cells die. The condition affects memory, thinking, and behavior. According to the Alzheimer’s Association, this disease accounts for 60 to 80 percent of dementia cases. Alzheimer’s disease is more common in people over the age of 65, but some people have early onset AD and show symptoms as early as their 40s or 50s. "
                android:textColor="@android:color/black"
                android:textSize="15dp" />

        </RelativeLayout>


    </ScrollView>

</LinearLayout>
